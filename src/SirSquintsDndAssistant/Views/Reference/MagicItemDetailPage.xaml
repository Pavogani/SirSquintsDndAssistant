<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SirSquintsDndAssistant.ViewModels.Reference"
             x:Class="SirSquintsDndAssistant.Views.Reference.MagicItemDetailPage"
             x:DataType="vm:MagicItemDetailViewModel"
             Title="{Binding Title}">

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Magic Item Image Section -->
            <Border Padding="10"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                    Stroke="Gray"
                    StrokeThickness="1"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                    <Border Grid.Row="0"
                            WidthRequest="150"
                            HeightRequest="150"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Grid>
                            <Image Source="{Binding ItemImage}"
                                   Aspect="AspectFit"
                                   IsVisible="{Binding HasImage}"/>
                            <Label Text="No Image"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Gray"
                                   IsVisible="{Binding HasImage, Converter={StaticResource InverseBoolConverter}}"/>
                            <ActivityIndicator IsRunning="{Binding IsLoadingImage}"
                                               IsVisible="{Binding IsLoadingImage}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                    <HorizontalStackLayout Grid.Row="1" Spacing="5" HorizontalOptions="Center" Margin="0,8,0,0">
                        <Button Text="Search"
                                Command="{Binding SearchCommunityImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#4169E1"/>
                        <Button Text="Upload"
                                Command="{Binding PickCustomImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#228B22"/>
                        <Button Text="URL"
                                Command="{Binding SetImageUrlCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#FF8C00"/>
                        <Button Text="X"
                                Command="{Binding RemoveImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                WidthRequest="32"
                                Padding="0"
                                BackgroundColor="#DC143C"
                                IsVisible="{Binding HasImage}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Magic Item Name Header -->
            <Label Text="{Binding MagicItem.Name}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Type -->
            <Label Text="{Binding MagicItem.Type}"
                   FontSize="16"
                   FontAttributes="Italic"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Rarity Badge -->
            <Border Padding="15,8"
                    BackgroundColor="{Binding RarityColor}"
                    StrokeThickness="0"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Label Text="{Binding MagicItem.Rarity}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Attunement Info -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#FFF5EE, Dark=#3A2A2A}"
                    Stroke="#8B4513"
                    StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="{Binding AttunementDisplay}"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Description -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#FFFAF0, Dark=#2D2D2D}"
                    Stroke="#DAA520"
                    StrokeThickness="2"
                    IsVisible="{Binding HasDescription}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Description" FontSize="18" FontAttributes="Bold" TextColor="#DAA520"/>
                    <Label Text="{Binding MagicItem.Description}" FontSize="14" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Source Info -->
            <Label HorizontalOptions="Center" FontSize="12" TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Source: "/>
                        <Span Text="{Binding MagicItem.Source}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <!-- Back Button -->
            <Button Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
