<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:SirSquintsDndAssistant.ViewModels.Reference"
             xmlns:services="clr-namespace:SirSquintsDndAssistant.Services.Reference"
             x:Class="SirSquintsDndAssistant.Views.Reference.RulesReferencePage"
             x:DataType="vm:RulesReferenceViewModel"
             Title="{Binding Title}">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadRulesCommand}"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *" Padding="10">
        <!-- Search Bar -->
        <Border Grid.Row="0" Padding="10" Margin="0,0,0,10"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2B2B2B}"
                Stroke="#4169E1" StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="10">
                <SearchBar Placeholder="Search rules..."
                           Text="{Binding SearchText}"
                           SearchCommand="{Binding SearchCommand}"/>
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Category:" VerticalOptions="Center"/>
                    <Picker ItemsSource="{Binding CategoryOptions}"
                            SelectedItem="{Binding SelectedCategory}"
                            WidthRequest="150"/>
                    <Button Text="Clear" Command="{Binding ClearSearchCommand}"
                            BackgroundColor="#696969" TextColor="White"
                            IsVisible="{Binding IsSearching}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Search Results -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding SearchResults}"
                        IsVisible="{Binding IsSearching}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="services:QuickRule">
                    <Border Padding="12" Margin="0,5"
                            BackgroundColor="{AppThemeBinding Light=#FFFACD, Dark=#3D3D3D}"
                            Stroke="#DAA520" StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                                <Border Padding="4,2" Margin="10,0,0,0"
                                        BackgroundColor="#4169E1" VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="4"/>
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Category}" FontSize="10" TextColor="White"/>
                                </Border>
                            </HorizontalStackLayout>
                            <Label Text="{Binding Description}" FontSize="13" TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>
                            <Label FontSize="12" TextColor="#228B22" IsVisible="{Binding Example, Converter={StaticResource StringNotNullConverter}}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Example: " FontAttributes="Bold"/>
                                        <Span Text="{Binding Example}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Categories View (when not searching) -->
        <ScrollView Grid.Row="1" IsVisible="{Binding IsSearching, Converter={StaticResource InvertedBoolConverter}}">
            <VerticalStackLayout Spacing="15" BindableLayout.ItemsSource="{Binding Categories}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="services:RuleCategory">
                        <Border Padding="15"
                                BackgroundColor="{AppThemeBinding Light=#F0F8FF, Dark=#2D2D2D}"
                                Stroke="#4169E1" StrokeThickness="2">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold" TextColor="#4169E1"/>

                                <VerticalStackLayout Spacing="8" BindableLayout.ItemsSource="{Binding Rules}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="services:QuickRule">
                                            <Border Padding="10"
                                                    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#3D3D3D}"
                                                    Stroke="#E0E0E0" StrokeThickness="1">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="5"/>
                                                </Border.StrokeShape>
                                                <VerticalStackLayout Spacing="3">
                                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="14"/>
                                                    <Label Text="{Binding Description}" FontSize="12" TextColor="{AppThemeBinding Light=#555555, Dark=#AAAAAA}"/>
                                                    <Label FontSize="11" TextColor="#228B22" IsVisible="{Binding Example, Converter={StaticResource StringNotNullConverter}}">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="e.g. " FontAttributes="Italic"/>
                                                                <Span Text="{Binding Example}"/>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
                                                </VerticalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
