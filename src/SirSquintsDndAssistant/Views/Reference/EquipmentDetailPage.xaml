<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SirSquintsDndAssistant.ViewModels.Reference"
             x:Class="SirSquintsDndAssistant.Views.Reference.EquipmentDetailPage"
             x:DataType="vm:EquipmentDetailViewModel"
             Title="{Binding Title}">

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">

            <!-- Equipment Image Section -->
            <Border Padding="10"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                    Stroke="Gray"
                    StrokeThickness="1"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*">
                    <Border Grid.Row="0"
                            WidthRequest="150"
                            HeightRequest="150"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#1E1E1E}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Grid>
                            <Image Source="{Binding EquipmentImage}"
                                   Aspect="AspectFit"
                                   IsVisible="{Binding HasImage}"/>
                            <Label Text="No Image"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Gray"
                                   IsVisible="{Binding HasImage, Converter={StaticResource InverseBoolConverter}}"/>
                            <ActivityIndicator IsRunning="{Binding IsLoadingImage}"
                                               IsVisible="{Binding IsLoadingImage}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                    <HorizontalStackLayout Grid.Row="1" Spacing="5" HorizontalOptions="Center" Margin="0,8,0,0">
                        <Button Text="Search"
                                Command="{Binding SearchCommunityImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#4169E1"/>
                        <Button Text="Upload"
                                Command="{Binding PickCustomImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#228B22"/>
                        <Button Text="URL"
                                Command="{Binding SetImageUrlCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                Padding="8,0"
                                BackgroundColor="#FF8C00"/>
                        <Button Text="X"
                                Command="{Binding RemoveImageCommand}"
                                FontSize="11"
                                HeightRequest="32"
                                WidthRequest="32"
                                Padding="0"
                                BackgroundColor="#DC143C"
                                IsVisible="{Binding HasImage}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Equipment Name Header -->
            <Label Text="{Binding Equipment.Name}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Category -->
            <Label Text="{Binding CategoryDisplay}"
                   FontSize="16"
                   FontAttributes="Italic"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Basic Stats Border -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                    Stroke="#696969"
                    StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto" ColumnSpacing="20" RowSpacing="10">
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                        <Label Text="Cost" FontSize="12" TextColor="Gray"/>
                        <Label Text="{Binding CostDisplay}" FontSize="16" FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                        <Label Text="Weight" FontSize="12" TextColor="Gray"/>
                        <Label FontSize="16" FontAttributes="Bold">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Equipment.Weight}"/>
                                    <Span Text=" lb."/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Weapon Info (if weapon) -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#FFF0F0, Dark=#3A2020}"
                    Stroke="#8B0000"
                    StrokeThickness="2"
                    IsVisible="{Binding IsWeapon}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Weapon Details" FontSize="16" FontAttributes="Bold" TextColor="#8B0000"/>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Category: " FontAttributes="Bold"/>
                                <Span Text="{Binding Equipment.WeaponCategory}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Range: " FontAttributes="Bold"/>
                                <Span Text="{Binding Equipment.WeaponRange}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- Armor Info (if armor) -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#F0F0FF, Dark=#20203A}"
                    Stroke="#4169E1"
                    StrokeThickness="2"
                    IsVisible="{Binding IsArmor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Armor Details" FontSize="16" FontAttributes="Bold" TextColor="#4169E1"/>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Category: " FontAttributes="Bold"/>
                                <Span Text="{Binding Equipment.ArmorCategory}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- Properties (if any) -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#F0FFF0, Dark=#203A20}"
                    Stroke="#228B22"
                    StrokeThickness="2"
                    IsVisible="{Binding HasProperties}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Properties" FontSize="16" FontAttributes="Bold" TextColor="#228B22"/>
                    <Label Text="{Binding PropertiesDisplay}" FontSize="14"/>
                </VerticalStackLayout>
            </Border>

            <!-- Description (if any) -->
            <Border Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#FFFAF0, Dark=#2D2D2D}"
                    Stroke="#DAA520"
                    StrokeThickness="2"
                    IsVisible="{Binding HasDescription}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Description" FontSize="16" FontAttributes="Bold" TextColor="#DAA520"/>
                    <Label Text="{Binding DescriptionDisplay}" FontSize="14" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Border>

            <!-- Source Info -->
            <Label HorizontalOptions="Center" FontSize="12" TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Source: "/>
                        <Span Text="{Binding Equipment.Source}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <!-- Back Button -->
            <Button Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
