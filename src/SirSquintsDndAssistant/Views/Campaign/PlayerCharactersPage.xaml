<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SirSquintsDndAssistant.ViewModels.Campaign"
             xmlns:models="clr-namespace:SirSquintsDndAssistant.Models.Creatures"
             x:Class="SirSquintsDndAssistant.Views.Campaign.PlayerCharactersPage"
             x:DataType="vm:PlayerCharactersViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto, *" Padding="10">
        <Label Grid.Row="0" Text="Imported Characters" FontSize="18" FontAttributes="Bold" Margin="0,0,0,10"/>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Characters}" SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="No characters imported yet" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Text="Go to Settings to import from D&amp;D Beyond" FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PlayerCharacter">
                    <Border Padding="15" Margin="0,5" BackgroundColor="#F0F8FF" Stroke="#4169E1" StrokeThickness="2">
                        <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                        <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto, Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontSize="20" FontAttributes="Bold"/>
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="14" TextColor="Gray">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Level "/>
                                        <Span Text="{Binding Level}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Race}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Class}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15" Margin="0,10,0,0">
                                <Label TextColor="#4169E1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="AC " FontAttributes="Bold"/>
                                            <Span Text="{Binding ArmorClass}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label TextColor="#006400">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="HP " FontAttributes="Bold"/>
                                            <Span Text="{Binding MaxHitPoints}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label TextColor="#8B0000">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="PP " FontAttributes="Bold"/>
                                            <Span Text="{Binding PassivePerception}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </HorizontalStackLayout>
                            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="10" TextColor="Gray" Margin="0,5,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Imported: "/>
                                        <Span Text="{Binding LastImported, StringFormat='{0:MMM dd, yyyy}'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                    Text="âœ•" WidthRequest="35" HeightRequest="35"
                                    CornerRadius="18" BackgroundColor="#DC143C" TextColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PlayerCharactersViewModel}}, Path=DeleteCharacterCommand}"
                                    CommandParameter="{Binding .}" VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
